<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>MacroRail.ico</ApplicationIcon>
    <AssemblyVersion>0.2.1</AssemblyVersion>
    <Copyright>Copyright © Shaun Price 2023</Copyright>
    <Description>Macro photography application for Nikon camaeras and Pololu TIC stepper controllers.</Description>
    <PackageProjectUrl>https://github.com/ShaunPrice/MacroRail/</PackageProjectUrl>
    <Title>MacroRail</Title>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/ShaunPrice/MacroRail/</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <FileVersion>0.2.1</FileVersion>
    <PackageLicenseFile>LICENCE</PackageLicenseFile>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="dependancies\**" />
    <Compile Remove="dependencies\**" />
    <Compile Remove="md3\**" />
    <Compile Remove="nikoncswrapper\**" />
    <EmbeddedResource Remove="dependancies\**" />
    <EmbeddedResource Remove="dependencies\**" />
    <EmbeddedResource Remove="md3\**" />
    <EmbeddedResource Remove="nikoncswrapper\**" />
    <None Remove="dependancies\**" />
    <None Remove="dependencies\**" />
    <None Remove="md3\**" />
    <None Remove="nikoncswrapper\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Settings1.Designer.cs" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="MacroRail.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="LibUsbDotNet" Version="2.2.29" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="nikoncswrapper">
      <HintPath>nikoncswrapper\nikoncswrapper_v2.1\bin\Release\nikoncswrapper.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
    <Compile Update="Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENCE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy &quot;$(ProjectDir)md3\*.*&quot; &quot;$(TargetDir)md3\&quot;&#xD;&#xA;copy &quot;$(TargetDir)md3\*.dll&quot; &quot;$(TargetDir)&quot;" />
  </Target>

</Project>